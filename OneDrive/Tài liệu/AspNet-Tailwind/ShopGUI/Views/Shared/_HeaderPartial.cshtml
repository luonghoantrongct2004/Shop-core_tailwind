@{
    var userId = Context.Session.GetString("UserId");
}
<header class="sticky-top z-[100]">
    <div class="container-fluid max-sm:bg-blue-400">
        <div class="max-sm:hidden">
            <!-- top -->
            <div class="row">
                <!-- bla bla -->
                <div class="col-lg-6">
                    <div class="ml-[75px]">
                        +84 0762956806
                    </div>
                </div>
                <!-- info -->
                <div class="col-lg-6">
                    <ul class="flex justify-end px-10 pr-[55px]">
                        <li class="mr-4">Thông báo</li>
                        <li class="mr-4"><a asp-area="Product" asp-controller="ProductAdmin" asp-action="Create">Product</a></li>
                        <li class="mr-4"><a asp-area="Account" asp-controller="AdminAccount" asp-action="Register">Đăng kí</a></li>
                        <li><a asp-area="Account" asp-controller="AdminAccount" asp-action="Login">Đăng nhập</a></li>
                    </ul>
                </div>
            </div>
            <!-- bottom -->
            <div class="row">
                <!-- logo -->
                <div class="text-center col-lg-3">
                    <span class="font-semibold text-[25px] uppercase colorful-text">trongshopping</span>
                </div>
                <!-- search -->
                <div class="col-lg-7">
                    <form action="">
                        <input type="search" name="" id="" placeholder="Tim kiem"
                               class="h-10 p-2 outline-none w-[810px]">
                    </form>
                    <!-- bottom search -->
                    <div>
                        <ul class="flex pt-[5px] text-[12px] font-semibold">
                            <li class="pr-[5px]">Quan tay</li>
                            <li class="pr-[5px]">Giay jodan</li>
                            <li class="pr-[5px]">Mu cao boi</li>
                            <li class="pr-[5px]">Sung conan</li>
                            <li>Dep to ong </li>
                        </ul>
                    </div>
                </div>
                <!-- cart -->
                <div class="col-lg-2">
                    <div class="mt-[10px]">
                        <a asp-controller="CartHome" asp-action="Cart" asp-route-userid="@userId"><i class="fas fa-shopping-cart text-[25px] text-pink-500"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex h-[45px] items-center md:hidden hsm">
            <div class="w-[80%] bg-white">
                <i class="p-2 text-pink-400 fas fa-search"></i>
                <input type="search" name="" id="" placeholder="search" class="outline-none">
            </div>
            <div class="w-[15%] ml-8 text-[20px]">
                <i class="fas fa-shopping-cart text-[#ff00f7]"></i>
            </div>
            <div class="w-[5%] ml-2 text-[20px] text-[#ff00f7]">
                <i class="fas fa-user"></i>
            </div>
        </div>
    </div>
</header>